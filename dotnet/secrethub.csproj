<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
    <PackageId>SecretHub</PackageId>
    <Version>0.1.0</Version>
    <Authors>SecretHub</Authors>
    <Company>SecretHub</Company>
    <Description>
      Client for the SecretHub API.
      SecretHub is a secrets management tool that works for every engineer. Securely provision passwords and keys throughout your entire stack with just a few lines of code.
    </Description>
  </PropertyGroup>
    <ItemGroup>
      <None Include="libSecretHubXGO.so" Pack="true" PackagePath="runtimes\linux-x64\native" />
      <None Include="SecretHubXGO.dll" Pack="true" PackagePath="runtimes\win10-x64\native" />
      <Compile Remove="test/UnitTest.cs" />
    </ItemGroup>
    <ItemGroup>
      <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    </ItemGroup>
</Project>
